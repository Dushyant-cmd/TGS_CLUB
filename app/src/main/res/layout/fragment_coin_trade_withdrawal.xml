<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="@dimen/_8dp"
            android:paddingHorizontal="16dp">

            <!-- Header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_8dp"
                android:paddingVertical="12dp">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@color/white"
                    android:padding="8dp"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    app:tint="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/istok_web_regular"
                    android:text="My wallet"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/btnHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@color/white"
                    android:padding="8dp"
                    android:src="@drawable/home_ic" />
            </RelativeLayout>

            <!-- Enter Amount Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/istok_web_regular"
                android:text="Enter Amount :"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/light_silver_bg"
                android:fontFamily="@font/istok_web_regular"
                android:hint="$0.00"
                android:inputType="numberDecimal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <!-- Tutorial Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/light_yellow_rectangle"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/circle_bg"
                    android:backgroundTint="@color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/istok_web_regular"
                    android:text="How to recharge : Video tutorial available here !"
                    android:textColor="#856404"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Quick Select Amount -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/istok_web_regular"
                android:text="Quick Select Amount"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="@dimen/_4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_bet_50"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/little_dark_violet_rect"
                    android:fontFamily="@font/istok_web_regular"
                    android:gravity="center"
                    android:text="$50"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btn_bet_100"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_border_rectangle"
                    android:fontFamily="@font/istok_web_regular"
                    android:gravity="center"
                    android:text="$100"
                    android:textColor="@color/dark_grey"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btn_bet_500"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_border_rectangle"
                    android:fontFamily="@font/istok_web_regular"
                    android:gravity="center"
                    android:text="$500"
                    android:textColor="@color/dark_grey"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btn_bet_1000"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_border_rectangle"
                    android:fontFamily="@font/istok_web_regular"
                    android:gravity="center"
                    android:text="$1000"
                    android:textColor="@color/dark_grey"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- QR Code Placeholder -->
            <FrameLayout
                android:layout_width="300dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_8dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:background="@drawable/silver_bg_sk"
                android:minHeight="200dp">

                <ImageView
                    android:id="@+id/ivQrCode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="24dp"
                    android:contentDescription="QR Code"
                    android:scaleType="fitCenter" />

            </FrameLayout>

            <!-- Email 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/silver_bg_sk"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingBottom="@dimen/_8dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/upiRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!-- Transaction ID -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/light_silver_bg"
                android:layout_marginHorizontal="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="monospace"
                    android:text="TPX8PDJSS9WGR"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <ImageButton
                    android:id="@+id/btnCopyTxnId"
                    android:layout_width="24dp"
                    android:layout_height="16dp"
                    android:background="@drawable/copy"
                    android:contentDescription="Copy"
                    android:padding="8dp"
                    android:src="@drawable/copy" />

            </LinearLayout>

            <!-- Wallet Address -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/istok_web_regular"
                android:text="Enter wallet address :"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etWalletAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4dp"
                android:background="@drawable/light_silver_bg"
                android:hint="Enter your wallet address"
                android:inputType="text"
                android:paddingHorizontal="16dp"
                android:paddingVertical="16dp"
                android:textColor="@color/black"
                android:textColorHint="@color/dark_grey" />

            <!-- UTR Code -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Enter UTR :"
                android:layout_marginTop="@dimen/_8dp"
                android:fontFamily="@font/istok_web_regular"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etUtr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@drawable/light_silver_bg"
                android:hint="Enter UTR Code"
                android:inputType="text"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textColorHint="@color/dark_grey" />

            <!-- Add Recharge Button -->
            <TextView
                android:id="@+id/btnAddRecharge"
                android:layout_width="260dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:background="@drawable/wingo_gradient"
                android:gravity="center"
                android:text="Add Recharge"
                android:textColor="@color/white"
                android:fontFamily="@font/istok_web_regular"
                android:textSize="20sp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>