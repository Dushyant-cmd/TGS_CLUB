<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/_15dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="@dimen/_8dp">

        <TextView
            android:id="@+id/btnBankDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/wingo_gradient"
            android:drawableEnd="@drawable/baseline_arrow_forward_24"
            android:drawableTint="@color/white"
            android:fontFamily="@font/istok_web_regular"
            android:paddingHorizontal="25dp"
            android:paddingVertical="12dp"
            android:text="Bank Details"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/istok_web_regular"
            android:text="Enter wallet address :"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etWalletAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4dp"
            android:background="@drawable/light_silver_bg"
            android:fontFamily="@font/istok_web_regular"
            android:hint="Enter your wallet address "
            android:inputType="text"
            android:paddingVertical="@dimen/_15dp"
            android:paddingStart="24dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/istok_web_regular"
            android:text="Enter UTR Code "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etUtr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4dp"
            android:background="@drawable/light_silver_bg"
            android:fontFamily="@font/istok_web_regular"
            android:hint="Enter UPI Id"
            android:inputType="text"
            android:paddingVertical="@dimen/_15dp"
            android:paddingStart="24dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/istok_web_regular"
            android:text="Min: ₹200 | Max: ₹200000"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/istok_web_regular"
            android:text="Withdrawal Tax for ₹200 to ₹1500 : ₹30\nwithdrawal Tax for ₹1500 to ₹2 lakhs  : TDS% \nT&amp;C : Your Wallet Must Be Activated\nDay - MON to FRI    Timing - 10 Am to 5 Pm"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancelBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:background="@drawable/grey_rectangle"
                android:fontFamily="@font/istok_web_regular"
                android:gravity="center"
                android:paddingVertical="@dimen/_10dp"
                android:text="Cancel"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/btnSubmit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:background="@drawable/wingo_gradient"
                android:fontFamily="@font/istok_web_regular"
                android:gravity="center"
                android:paddingVertical="@dimen/_10dp"
                android:text="Confirm"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>