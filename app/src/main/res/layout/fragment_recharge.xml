<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="@color/actualWhite"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-6dp"
            android:background="@drawable/bottom_round_linear_gradient"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_15dp"
            android:paddingVertical="@dimen/_25dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/upBtn"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null"
                    app:tint="@color/actualBlack"
                    android:src="@drawable/baseline_arrow_back_24" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10dp"
                android:fontFamily="@font/inria_serif_bold"
                android:text="Add Money"
                android:textColor="@color/actualBlack"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_15dp">

            <FrameLayout
                android:id="@+id/addMoneyBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_35dp"
                android:background="@drawable/dark_tint_gradient_linear"
                android:elevation="@dimen/_4dp"
                android:paddingHorizontal="@dimen/_35dp"
                android:paddingVertical="@dimen/_10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/inria_serif_bold"
                    android:text="How to Add Money "
                    android:textColor="@color/actualBlack"
                    android:textSize="16sp" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_25dp"
                android:fontFamily="@font/inria_serif_bold"
                android:text="Add Money"
                android:textColor="@color/actualBlack"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_45dp"
                android:layout_marginTop="@dimen/_15dp"
                android:background="@drawable/grey_rectangle"
                android:elevation="@dimen/_4dp"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/_15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_15dp"
                    android:fontFamily="@font/inria_serif_bold"
                    android:text="Current Balance: "
                    android:textColor="@color/actualBlack"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_15dp"
                    android:fontFamily="@font/inria_serif_bold"
                    android:text="\u20b9 20"
                    android:textColor="@color/actualBlack"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="@dimen/_15dp"
                android:fontFamily="@font/inria_serif_bold"
                android:text="Enter Amount: "
                android:textColor="@color/actualBlack"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/rechargeAmt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/_4dp"
                android:background="@drawable/grey_rectangle"
                android:fontFamily="@font/inria_serif_bold"
                android:hint="Enter amount"
                android:inputType="phone"
                android:maxLength="10"
                android:paddingVertical="@dimen/_15dp"
                android:paddingStart="10dp"
                android:paddingEnd="4dp"
                android:textColor="@color/actualBlack" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/inria_serif_bold"
                android:text="Quick Select: "
                android:textColor="@color/actualBlack"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingVertical="2dp">

                <TextView
                    android:id="@+id/oneKTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8dp"
                    android:layout_weight="1"
                    android:background="@drawable/grey_rectangle"
                    android:fontFamily="@font/inria_serif_bold"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_15dp"
                    android:paddingVertical="@dimen/_8dp"
                    android:text="\u20b9 1000"
                    android:textColor="@color/actualBlack"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/fiveKTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8dp"
                    android:layout_weight="1"
                    android:background="@drawable/grey_rectangle"
                    android:fontFamily="@font/inria_serif_bold"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_15dp"
                    android:paddingVertical="@dimen/_8dp"
                    android:text="\u20b9 5000"
                    android:textColor="@color/actualBlack"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tenKTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8dp"
                    android:layout_weight="1"
                    android:background="@drawable/grey_rectangle"
                    android:fontFamily="@font/inria_serif_bold"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_15dp"
                    android:paddingVertical="@dimen/_8dp"
                    android:text="\u20b9 10000"
                    android:textColor="@color/actualBlack"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingVertical="2dp">

                <TextView
                    android:id="@+id/twentyKTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8dp"
                    android:layout_weight="1"
                    android:background="@drawable/grey_rectangle"
                    android:fontFamily="@font/inria_serif_bold"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_15dp"
                    android:paddingVertical="@dimen/_8dp"
                    android:text="\u20b9 20000"
                    android:textColor="@color/actualBlack"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/fiftyKTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8dp"
                    android:layout_weight="1"
                    android:background="@drawable/grey_rectangle"
                    android:fontFamily="@font/inria_serif_bold"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_15dp"
                    android:paddingVertical="@dimen/_8dp"
                    android:text="\u20b9 50000"
                    android:textColor="@color/actualBlack"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/oneLacTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8dp"
                    android:layout_weight="1"
                    android:background="@drawable/grey_rectangle"
                    android:fontFamily="@font/inria_serif_bold"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_15dp"
                    android:paddingVertical="@dimen/_8dp"
                    android:text="\u20b9 100000"
                    android:textColor="@color/actualBlack"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/manual_rec_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:background="@drawable/tint_light_gradient"
                    android:elevation="@dimen/_8dp"
                    android:fontFamily="@font/inria_serif_bold"
                    android:gravity="center"
                    android:paddingVertical="@dimen/_15dp"
                    android:text="Manual Recharge"
                    android:textColor="@color/actualBlack"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>