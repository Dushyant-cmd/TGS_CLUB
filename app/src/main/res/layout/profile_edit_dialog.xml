<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/linear_gradient"
    android:layout_margin="@dimen/_8dp"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/_15dp"
    android:paddingVertical="@dimen/_8dp">

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="end"
        android:background="@drawable/linear_gradient_stroke"
        android:src="@drawable/ic_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_45dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_marginTop="@dimen/_15dp"
            android:background="@drawable/purple_corners_shape"
            android:backgroundTint="@color/light_grey"
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="@dimen/_4dp"
            android:hint="Enter your name"
            android:inputType="text"
            android:maxLength="10"
            android:paddingHorizontal="@dimen/_5dp"
            android:paddingVertical="@dimen/_15dp" />

        <TextView
            android:id="@+id/confirmBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:background="@drawable/tint_round_shape"
            android:backgroundTint="@color/black"
            android:drawableEnd="@drawable/ic_arrow_24"
            android:drawableTint="@color/white"
            android:elevation="2dp"
            android:fontFamily="@font/inria_serif_bold"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_15dp"
            android:paddingVertical="@dimen/_10dp"
            android:text="Confirm"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>