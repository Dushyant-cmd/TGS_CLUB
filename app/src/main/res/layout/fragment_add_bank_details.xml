<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/istok_web_regular"
                    android:text="Account Number : "
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/accNumBank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4dp"
                    android:background="@drawable/light_silver_bg"
                    android:fontFamily="@font/istok_web_regular"
                    android:hint="Enter Account Number"
                    android:inputType="number"
                    android:paddingVertical="@dimen/_15dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="@dimen/_4dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/istok_web_regular"
                    android:text="Bank holder Name : "
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/nameHolderBank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4dp"
                    android:background="@drawable/light_silver_bg"
                    android:fontFamily="@font/istok_web_regular"
                    android:hint="Enter Your Name"
                    android:inputType="textPersonName"
                    android:paddingVertical="@dimen/_15dp"
                    android:paddingStart="24dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/istok_web_regular"
                    android:text="Bank Name : "
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/nameBank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4dp"
                    android:background="@drawable/light_silver_bg"
                    android:fontFamily="@font/istok_web_regular"
                    android:hint="Enter Bank name"
                    android:inputType="textPersonName"
                    android:paddingVertical="@dimen/_15dp"
                    android:paddingStart="24dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/istok_web_regular"
                    android:text="IFSC Code : "
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/ifscBank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4dp"
                    android:background="@drawable/light_silver_bg"
                    android:fontFamily="@font/istok_web_regular"
                    android:hint="Enter IFSC Code"
                    android:inputType="text"
                    android:paddingVertical="@dimen/_15dp"
                    android:paddingStart="24dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/istok_web_regular"
                    android:text="UPI ID : "
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/upiBank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4dp"
                    android:background="@drawable/light_silver_bg"
                    android:fontFamily="@font/istok_web_regular"
                    android:hint="Enter UPI Id"
                    android:inputType="text"
                    android:paddingVertical="@dimen/_15dp"
                    android:paddingStart="24dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:buttonTint="#602DB6"
                    android:checked="true"
                    android:fontFamily="@font/istok_web_regular"
                    android:paddingStart="4dp"
                    android:text="@string/i_understand_that_my_bank_details_are_encrypted_and_stored_securely_i_authorize_color_trading_to_process_transactions_from_this_account"
                    android:textSize="@dimen/_12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cancelBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/grey_rectangle"
                        android:fontFamily="@font/istok_web_regular"
                        android:gravity="center"
                        android:paddingVertical="@dimen/_10dp"
                        android:text="Cancel"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/submitBank"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/wingo_gradient"
                        android:fontFamily="@font/istok_web_regular"
                        android:gravity="center"
                        android:paddingVertical="@dimen/_10dp"
                        android:text="Confirm"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>