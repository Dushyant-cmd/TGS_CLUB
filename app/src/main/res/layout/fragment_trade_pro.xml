<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefLy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/_8dp"
    android:fillViewport="true">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/mainLy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15dp"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- BTC Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/transparent"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/fourty_five_dark_violet_gradient"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvBtcGraphTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/istok_web_regular"
                            android:text="BTC/INR"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tvBtcAmt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/istok_web_regular"
                            android:text="â‚¹45,234.50"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tvBtcPt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/istok_web_regular"
                            android:text="+2.34%"
                            android:textColor="@color/light_green"
                            android:textSize="11sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- BTC Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/transparent"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/linear_blue_gradient"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvEthGraphTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/istok_web_regular"
                            android:text="ETH/INR"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tvEthAmt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/istok_web_regular"
                            android:text="Coming Soon"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tvEthPt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/istok_web_regular"
                            android:text="+2.34%"
                            android:textColor="@color/light_green"
                            android:textSize="11sp"
                            android:visibility="invisible" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15dp"
                android:layout_marginTop="@dimen/_8dp"
                android:background="@drawable/silver_bg_sk"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Add graph here -->
                    <com.github.mikephil.charting.charts.CandleStickChart
                        android:id="@+id/candleStick"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginHorizontal="1dp"
                        android:background="@drawable/top_round_shape" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_grey" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/_15dp"
                        android:paddingVertical="@dimen/_8dp">

                        <TextView
                            android:id="@+id/tvRoundNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/istok_web_bold"
                            android:text="Round #1"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/istok_web_regular"
                                android:text="BTC/INR - "
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvGraphCurrCandle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/istok_web_regular"
                                android:text="\u20b9402339 (+230%)"
                                android:textColor="@color/black"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15dp"
                    android:paddingVertical="@dimen/_8dp">

                    <TextView
                        android:id="@+id/tvGraphType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/silver_bg_sk"
                        android:fontFamily="@font/istok_web_bold"
                        android:gravity="center"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="2dp"
                        android:text="BTC/INR"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/_4dp"
                        android:background="@drawable/light_silver_bg"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/_15dp"
                        android:paddingVertical="@dimen/_4dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_baseline_access_time_24"
                            app:tint="@color/black" />

                        <TextView
                            android:id="@+id/minTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/istok_web_regular"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            tools:text="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/istok_web_regular"
                            android:text=":"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/secTv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/istok_web_regular"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            tools:text="0" />

                        <TextView
                            android:id="@+id/secTv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/istok_web_regular"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            tools:text="0" />
                    </LinearLayout>
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:paddingHorizontal="@dimen/_15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/istok_web_regular"
                    android:text="Investment Amount :"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <!-- Bet Amount Options -->
                <LinearLayout
                    android:id="@+id/betAmtLy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_bet_50"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/little_dark_violet_rect"
                        android:fontFamily="@font/istok_web_regular"
                        android:gravity="center"
                        android:text="\u20b950"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/btn_bet_100"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/light_silver_bg"
                        android:fontFamily="@font/istok_web_regular"
                        android:gravity="center"
                        android:text="\u20b9100"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/btn_bet_500"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/light_silver_bg"
                        android:fontFamily="@font/istok_web_regular"
                        android:gravity="center"
                        android:text="\u20b9500"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/btn_bet_1000"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/light_silver_bg"
                        android:fontFamily="@font/istok_web_regular"
                        android:gravity="center"
                        android:text="\u20b91000"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/btn_bet_5000"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/light_silver_bg"
                        android:fontFamily="@font/istok_web_regular"
                        android:gravity="center"
                        android:text="\u20b95000"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/iXBtnUp"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/grey_rectangle"
                            android:backgroundTint="@color/too_light_grey"
                            android:src="@drawable/baseline_arrow_drop_up_24"                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:minWidth="0dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/light_silver_bg"
                            android:backgroundTint="@color/light_tint"
                            android:fontFamily="@font/istok_web_bold"
                            android:gravity="center"
                            android:paddingHorizontal="@dimen/_8dp"
                            android:paddingVertical="6dp"
                            android:text="x10"
                            android:textSize="14sp" />

                        <ImageButton
                            android:id="@+id/iXBtnDown"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/grey_rectangle"
                            android:backgroundTint="@color/too_light_grey"
                            android:src="@drawable/baseline_arrow_drop_up_24"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:rotation="180" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/betDetailsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15dp"
                android:layout_marginBottom="@dimen/_8dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/orange"
                app:cardCornerRadius="12dp"
                tools:visibility="visible">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:orientation="horizontal"
                    android:paddingEnd="0dp"
                    app:cardBackgroundColor="@color/light_yellow"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/_8dp">

                        <ImageView
                            android:id="@+id/ivBetPredictionType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@null"
                            android:src="@drawable/graph_down_ic"
                            app:tint="@color/red" />

                        <TextView
                            android:id="@+id/betAmt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8dp"
                            android:fontFamily="@font/istok_web_regular"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_18sp"
                            android:textStyle="bold"
                            tools:text="\u20b9200" />

                        <TextView
                            android:id="@+id/betEntryAmt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8dp"
                            android:fontFamily="@font/istok_web_regular"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sp"
                            tools:text="Entry: \u20b91812.49" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15dp"
                android:layout_marginTop="@dimen/_4dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/upBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_15dp"
                    android:layout_weight="1"
                    android:background="@drawable/grey_rectangle"
                    android:backgroundTint="@color/green"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingVertical="@dimen/_12dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@null"
                        android:src="@drawable/graph_up_ic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center"
                        android:text="UP"
                        android:textColor="@color/white"
                        android:textSize="25sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/downBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15dp"
                    android:layout_weight="1"
                    android:background="@drawable/grey_rectangle"
                    android:backgroundTint="@color/red"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingVertical="@dimen/_12dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@null"
                        android:src="@drawable/graph_down_ic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15dp"
                        android:fontFamily="@font/istok_web_bold"
                        android:gravity="center"
                        android:text="DOWN"
                        android:textColor="@color/white"
                        android:textSize="25sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/btn_confirm_bet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/purple_corners_shape"
                android:backgroundTint="@color/blue_new"
                android:elevation="4dp"
                android:fontFamily="@font/istok_web_bold"
                android:gravity="center"
                android:paddingVertical="8dp"
                android:text="Confirm Bet"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15dp"
                android:layout_marginTop="4dp"
                android:drawableStart="@drawable/baseline_access_time_24"
                android:drawablePadding="@dimen/_4dp"
                android:fontFamily="@font/istok_web_regular"
                android:text="Trade History : "
                android:textColor="@color/black"
                android:textSize="@dimen/_18sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:itemCount="3"
                tools:listitem="@layout/trade_pro_history_list_item" />

            <ProgressBar
                android:id="@+id/tradePB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminateTint="@color/black" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>