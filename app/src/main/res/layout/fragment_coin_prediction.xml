<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Round Timer Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/wingo_gradient"
                android:paddingVertical="4dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Round #1"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <View
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/baseline_info_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="How to play"
                        android:textColor="@color/white"
                        android:textSize="9sp"
                        android:layout_marginStart="6dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Time Left"
                    android:textColor="@color/white"
                    android:textSize="9sp" />

                <!-- Timer -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_timer_min1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="0"
                        android:background="@drawable/light_yellow_rectangle"
                        android:textSize="20sp"
                        android:backgroundTint="@color/white"
                        android:gravity="center"
                        android:fontFamily="@font/inria_serif_bold"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_timer_min2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/light_yellow_rectangle"
                        android:text="0"
                        android:backgroundTint="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:fontFamily="@font/inria_serif_bold"
                        android:textColor="@color/black"
                        android:layout_marginStart="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/tv_timer_sec1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/light_yellow_rectangle"
                        android:backgroundTint="@color/white"
                        android:fontFamily="@font/inria_serif_bold"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_timer_sec2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/light_yellow_rectangle"
                        android:backgroundTint="@color/white"
                        android:fontFamily="@font/inria_serif_bold"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/black"
                        android:layout_marginStart="6dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/logo_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:padding="@dimen/_4dp">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_circle_grey_stroke"
                        android:backgroundTint="@color/black"
                        android:padding="2dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="3dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/tsc_logo_bg" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Crypto Charts -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/silver_bg_sk"
            android:elevation="@dimen/_8dp"
            android:orientation="vertical"
            android:paddingHorizontal="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Bitcoin Chart -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/silver_bg_sk"
                    android:orientation="vertical"
                    android:paddingVertical="@dimen/_4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/istok_web_bold"
                        android:text="₿ BITCOIN"
                        android:layout_marginHorizontal="@dimen/_8dp"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginHorizontal="@dimen/_8dp"
                        android:fontFamily="@font/istok_web_regular"
                        android:text="₹45,234.50"
                        android:textColor="#000000"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:fontFamily="@font/istok_web_regular"
                        android:text="Last 24h: +2.34%"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="@dimen/_8dp"
                        android:textSize="9sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_grey" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chart_bitcoin"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_grey" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginHorizontal="@dimen/_8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/istok_web_regular"
                            android:text="Momentum :"
                            android:textColor="@color/black"
                            android:textSize="9sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/istok_web_regular"
                            android:text=" 86%"
                            android:textColor="@color/green"
                            android:textSize="9sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Ethereum Chart -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/silver_bg_sk"
                    android:orientation="vertical"
                    android:paddingVertical="@dimen/_4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/istok_web_bold"
                        android:layout_marginHorizontal="@dimen/_8dp"
                        android:text="Ξ ETHEREUM"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/istok_web_regular"
                        android:layout_marginHorizontal="@dimen/_8dp"
                        android:text="₹2,890.20"
                        android:textColor="#000000"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginHorizontal="@dimen/_8dp"
                        android:fontFamily="@font/istok_web_regular"
                        android:text="Last 24h: -1.23%"
                        android:textColor="@color/black"
                        android:textSize="9sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_grey" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chart_ethereum"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_grey" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:layout_marginHorizontal="@dimen/_8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/istok_web_regular"
                            android:text="Momentum :"
                            android:textColor="@color/black"
                            android:textSize="9sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/istok_web_regular"
                            android:text=" 52%"
                            android:textColor="@color/green"
                            android:textSize="9sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Solana Chart -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/silver_bg_sk"
                    android:orientation="vertical"
                    android:paddingVertical="@dimen/_4dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginStart="@dimen/_8dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/double_circle" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4dp"
                            android:text="SOL"
                            android:fontFamily="@font/istok_web_bold"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/istok_web_regular"
                        android:layout_marginHorizontal="@dimen/_8dp"
                        android:text="₹98.45"
                        android:textColor="#000000"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:fontFamily="@font/istok_web_regular"
                        android:text="Last 24h: +0.89%"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="@dimen/_8dp"
                        android:textSize="9sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_grey" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chart_solana"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_grey" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:layout_marginHorizontal="@dimen/_8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/istok_web_regular"
                            android:text="Momentum :"
                            android:textColor="@color/black"
                            android:textSize="9sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/istok_web_regular"
                            android:text=" 90%"
                            android:textColor="@color/green"
                            android:textSize="9sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Bet Info -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/istok_web_regular"
                        android:text="Your bet is on"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvSelected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_8dp"
                        android:fontFamily="@font/istok_web_bold"
                        android:text="Ethereum"
                        android:textAllCaps="true"
                        android:textColor="@color/dark_tint"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:paddingVertical="@dimen/_4dp"
                    android:paddingHorizontal="12dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/light_silver_bg"
                    android:layout_alignParentEnd="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/istok_web_regular"
                        android:text="Last result: "
                        android:textColor="@color/pastel_yellow"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvLastResult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/istok_web_bold"
                        android:text="Ethereum"
                        android:textAllCaps="true"
                        android:textColor="@color/pastel_yellow"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <!-- Bet Amount Section -->
        <RelativeLayout
            android:background="@drawable/silver_bg_sk"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:paddingHorizontal="@dimen/_15dp"
            android:paddingVertical="@dimen/_8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/istok_web_regular"
                android:text="Bet Amount :"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Bet Amount Options -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_bet_5"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/little_dark_violet_rect"
                    android:fontFamily="@font/istok_web_regular"
                    android:gravity="center"
                    android:text="$5"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btn_bet_10"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_border_rectangle"
                    android:gravity="center"
                    android:text="$10"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btn_bet_50"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_border_rectangle"
                    android:gravity="center"
                    android:text="$50"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btn_bet_100"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_border_rectangle"
                    android:gravity="center"
                    android:text="$100"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btn_bet_200"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_border_rectangle"
                    android:gravity="center"
                    android:text="$200"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/iBtnUp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:background="@drawable/baseline_arrow_drop_up_24"
                        android:minWidth="0dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/light_silver_bg"
                        android:backgroundTint="@color/light_tint"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/_8dp"
                        android:paddingVertical="@dimen/_8dp"
                        android:text="x1"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/iBtnDown"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:background="@drawable/baseline_arrow_drop_up_24"
                        android:rotation="180" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <!-- Select Coin Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Coin :"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/istok_web_regular"
            android:layout_marginStart="16dp"
            android:textColor="@color/black" />

        <!-- Coin Selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4dp"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center"
            android:weightSum="3">

            <!-- Bitcoin -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_bitcoin"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/little_dark_violet">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/btc_coin_ic"
                        android:contentDescription="Bitcoin" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bitcoin"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BTC"
                        android:textSize="11sp"
                        android:textColor="#E0D4FF"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Ethereum -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_ethereum"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/eth_coin_ic"
                        android:contentDescription="Ethereum" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ethereum"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginTop="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ETH"
                        android:textSize="11sp"
                        android:textColor="#666666"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Solana -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_solana"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/sol_coin_ic"
                        android:contentDescription="Solana" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Solana"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginTop="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SOL"
                        android:textSize="11sp"
                        android:textColor="#666666"
                        android:layout_marginTop="2dp" />
