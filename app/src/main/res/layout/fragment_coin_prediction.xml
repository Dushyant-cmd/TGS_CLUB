<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefLy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_theme_gradient_bg"
    android:fillViewport="true"
    android:paddingVertical="@dimen/_12dp">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dark_theme_gradient_bg"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Round Timer Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/wingo_gradient"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingVertical="4dp">

                    <TextView
                        android:id="@+id/tvRoundNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Round #1"
                        android:textColor="@color/actualWhite"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/baseline_info_24"
                            android:backgroundTint="@color/actualWhite" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="How to play"
                            android:textColor="@color/actualWhite"
                            android:textSize="9sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Time Left"
                        android:textColor="@color/actualWhite"
                        android:textSize="9sp" />

                    <!-- Timer -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_timer_min1"
                            android:layout_width="31dp"
                            android:layout_height="24dp"
                            android:background="@drawable/light_yellow_rectangle"
                            android:backgroundTint="@color/actualWhite"
                            android:fontFamily="@font/inria_serif_bold"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/actualBlack"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_timer_min2"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="6dp"
                            android:background="@drawable/light_yellow_rectangle"
                            android:backgroundTint="@color/actualWhite"
                            android:fontFamily="@font/inria_serif_bold"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/actualBlack"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/light_yellow_rectangle"
                            android:backgroundTint="@color/actualWhite"
                            android:fontFamily="@font/montserrat_bold"
                            android:gravity="center"
                            android:paddingHorizontal="@dimen/_8dp"
                            android:text=":"
                            android:textColor="@color/actualBlack" />

                        <TextView
                            android:id="@+id/tv_timer_sec1"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/light_yellow_rectangle"
                            android:backgroundTint="@color/actualWhite"
                            android:fontFamily="@font/inria_serif_bold"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="@color/actualBlack"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_timer_sec2"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="6dp"
                            android:background="@drawable/light_yellow_rectangle"
                            android:backgroundTint="@color/actualWhite"
                            android:fontFamily="@font/inria_serif_bold"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="@color/actualBlack"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/logo_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_4dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:padding="@dimen/_4dp">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/white_circle_grey_stroke"
                            android:backgroundTint="@color/actualBlack"
                            android:padding="2dp">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginBottom="3dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/tsc_logo_bg" />
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Crypto Charts -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/dark_theme_supported_silver_black_bg"
                android:elevation="@dimen/_8dp"
                android:orientation="vertical"
                android:paddingHorizontal="8dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Bitcoin Chart -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/silver_bg_sk"
                        android:orientation="vertical"
                        android:paddingVertical="@dimen/_4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_8dp"
                            android:fontFamily="@font/istok_web_regular"
                            android:text="₿ BITCOIN"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvBtcAmt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_8dp"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/istok_web_regular"
                            android:text="₹45,234.50"
                            android:textColor="@color/black"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_8dp"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/istok_web_regular"
                            android:text="Live micro charts : "
                            android:textColor="@color/black"
                            android:textSize="9sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/light_grey" />

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/chart_bitcoin"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="1dp"
                            android:background="@color/white" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/light_grey" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_8dp"
                            android:layout_marginTop="4dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/istok_web_regular"
                                android:text="Momentum :"
                                android:textColor="@color/black"
                                android:textSize="9sp" />

                            <TextView
                                android:id="@+id/tvMomentumBtc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/istok_web_regular"
                                android:textColor="@color/green"
                                android:textSize="9sp"
                                tools:text=" 86%" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Ethereum Chart -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/silver_bg_sk"
                        android:orientation="vertical"
                        android:paddingVertical="@dimen/_4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_8dp"
                            android:fontFamily="@font/istok_web_regular"
                            android:text="Ξ ETHEREUM"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvEthAmt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_8dp"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/istok_web_regular"
                            android:text="₹2,890.20"
                            android:textColor="@color/black"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_8dp"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/istok_web_regular"
                            android:text="Live micro charts : "
                            android:textColor="@color/black"
                            android:textSize="9sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/light_grey" />

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/chart_ethereum"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="1dp"
                            android:background="@color/white" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/light_grey" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_8dp"
                            android:layout_marginTop="4dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/istok_web_regular"
                                android:text="Momentum :"
                                android:textColor="@color/black"
                                android:textSize="9sp" />

                            <TextView
                                android:id="@+id/tvMomentumEth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/istok_web_regular"
                                android:text=" 52%"
                                android:textColor="@color/green"
                                android:textSize="9sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Solana Chart -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/silver_bg_sk"
                        android:orientation="vertical"
                        android:paddingVertical="@dimen/_4dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/double_circle" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_4dp"
                                android:fontFamily="@font/istok_web_regular"
                                android:gravity="center"
                                android:text="SOL"
                                android:textColor="@color/black"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvSolAmt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_8dp"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/istok_web_regular"
                            android:text="₹98.45"
                            android:textColor="@color/black"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_8dp"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/istok_web_regular"
                            android:text="Live micro charts : "
                            android:textColor="@color/black"
                            android:textSize="9sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/light_grey" />

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/chart_solana"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="1dp"
                            android:background="@color/white" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/light_grey" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_8dp"
                            android:layout_marginTop="4dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/istok_web_regular"
                                android:text="Momentum :"
                                android:textColor="@color/black"
                                android:textSize="9sp" />

                            <TextView
                                android:id="@+id/tvMomentumSol"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/istok_web_regular"
                                android:text=" 90%"
                                android:textColor="@color/green"
                                android:textSize="9sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Bet Info -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/betLy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:visibility="gone"
                        tools:visibility="visible"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/istok_web_regular"
                            android:text="Your bet is on"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvSelected"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_8dp"
                            android:fontFamily="@font/istok_web_bold"
                            android:text="Ethereum"
                            android:textAllCaps="true"
                            android:textColor="@color/dark_tint"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/light_silver_bg"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="@dimen/_4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/istok_web_regular"
                            android:text="Last result: "
                            android:textColor="@color/pastel_yellow"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvLastResult"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/istok_web_bold"
                            android:text="Ethereum"
                            android:textAllCaps="true"
                            android:textColor="@color/pastel_yellow"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <!-- Bet Amount Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/dark_theme_supported_silver_black_bg"
                android:paddingHorizontal="@dimen/_15dp"
                android:paddingVertical="@dimen/_8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/istok_web_regular"
                        android:text="Investment Amount : "
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvInvestAmt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/istok_web_regular"
                        android:text="\u20b950"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Bet Amount Options -->
                <LinearLayout
                    android:id="@+id/betAmtSelectionLy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_bet_50"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/little_dark_violet_rect"
                        android:fontFamily="@font/istok_web_regular"
                        android:gravity="center"
                        android:text="₹50"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/btn_bet_100"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/white_border_rectangle"
                        android:fontFamily="@font/istok_web_regular"
                        android:gravity="center"
                        android:text="₹100"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/btn_bet_500"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/white_border_rectangle"
                        android:fontFamily="@font/istok_web_regular"
                        android:gravity="center"
                        android:text="₹500"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/btn_bet_1000"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/white_border_rectangle"
                        android:fontFamily="@font/istok_web_regular"
                        android:gravity="center"
                        android:text="₹1000"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/btn_bet_5000"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/white_border_rectangle"
                        android:fontFamily="@font/istok_web_regular"
                        android:gravity="center"
                        android:text="₹5000"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/iXBtnUp"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/baseline_arrow_drop_up_24"
                            android:backgroundTint="@color/black"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:minWidth="0dp" />

                        <TextView
                            android:id="@+id/tvBetIntoNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/light_silver_bg"
                            android:backgroundTint="@color/light_tint"
                            android:fontFamily="@font/istok_web_regular"
                            android:gravity="center"
                            android:paddingHorizontal="@dimen/_8dp"
                            android:paddingVertical="@dimen/_8dp"
                            android:text="x10"
                            android:textColor="@color/actualBlack"
                            android:textSize="14sp" />

                        <ImageButton
                            android:id="@+id/iXBtnDown"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/baseline_arrow_drop_up_24"
                            android:backgroundTint="@color/black"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:rotation="180" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <!-- Select Coin Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/istok_web_regular"
                android:text="Select Coin :"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <!-- Coin Selection -->
            <LinearLayout
                android:id="@+id/cardSelectionLy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:weightSum="3">

                <!-- Bitcoin -->
                <FrameLayout
                    android:id="@+id/card_bitcoin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/silver_bg_sk"
                    android:backgroundTint="@color/little_dark_violet">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:contentDescription="Bitcoin"
                            android:src="@drawable/btc_coin_ic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Bitcoin"
                            android:textColor="@color/actualWhite"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="BTC"
                            android:textColor="@color/actualWhite"
                            android:textSize="11sp" />
                    </LinearLayout>
                </FrameLayout>

                <!-- Ethereum -->
                <FrameLayout
                    android:id="@+id/card_ethereum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/silver_bg_sk">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:contentDescription="Ethereum"
                            android:src="@drawable/eth_coin_ic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Ethereum"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="ETH"
                            android:textColor="@color/black"
                            android:textSize="11sp" />
                    </LinearLayout>
                </FrameLayout>

                <!-- Solana -->
                <FrameLayout
                    android:id="@+id/card_solana"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8dp"
                    android:layout_weight="1"
                    android:background="@drawable/silver_bg_sk">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:contentDescription="Solana"
                            android:src="@drawable/sol_coin_ic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Solana"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="SOL"
                            android:textColor="@color/black"
                            android:textSize="11sp" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <!-- Confirm Bet Button -->
            <TextView
                android:id="@+id/btn_confirm_bet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/purple_corners_shape"
                android:backgroundTint="@color/blue_new"
                android:elevation="4dp"
                android:fontFamily="@font/istok_web_bold"
                android:gravity="center"
                android:paddingVertical="8dp"
                android:text="Confirm Bet"
                android:textColor="@color/actualWhite"
                android:textSize="20sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingBottom="@dimen/_8dp"
                tools:itemCount="3"
                tools:listitem="@layout/coin_prediction_history_list_item" />

            <ProgressBar
                android:id="@+id/coinPB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminateTint="@color/black" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>