<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="2dp">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:contentDescription="Back" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Coin prediction"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:background="@drawable/silver_bg_sk"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/wallet_ic_two"
                    app:tint="#10B981"
                    android:contentDescription="Wallet" />

                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$9,815"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#10B981"
                    android:layout_marginStart="6dp" />
            </LinearLayout>
        </RelativeLayout>

        <!-- Round Timer Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:background="@drawable/gradient_round_timer">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/gradient_round_timer"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Round #1"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <View
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:background="@drawable/white_dot" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time to play"
                        android:textColor="#E0D4FF"
                        android:textSize="12sp"
                        android:layout_marginStart="6dp" />
                </LinearLayout>

                <!-- Timer -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_timer_min1"
                        android:layout_width="32dp"
                        android:layout_height="36dp"
                        android:text="0"
                        android:textColor="#6D28D9"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@drawable/bg_timer_box" />

                    <TextView
                        android:id="@+id/tv_timer_min2"
                        android:layout_width="32dp"
                        android:layout_height="36dp"
                        android:text="1"
                        android:textColor="#6D28D9"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@drawable/bg_timer_box"
                        android:layout_marginStart="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/tv_timer_sec1"
                        android:layout_width="32dp"
                        android:layout_height="36dp"
                        android:text="2"
                        android:textColor="#6D28D9"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@drawable/bg_timer_box" />

                    <TextView
                        android:id="@+id/tv_timer_sec2"
                        android:layout_width="32dp"
                        android:layout_height="36dp"
                        android:text="4"
                        android:textColor="#6D28D9"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@drawable/bg_timer_box"
                        android:layout_marginStart="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/tv_timer_ms1"
                        android:layout_width="32dp"
                        android:layout_height="36dp"
                        android:text="0"
                        android:textColor="#6D28D9"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@drawable/bg_timer_box" />
                </LinearLayout>

                <!-- RS Icon -->
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_rupee_gold"
                    android:layout_marginTop="12dp"
                    android:contentDescription="Rupee" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Crypto Charts -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:weightSum="3">

            <!-- Bitcoin Chart -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_chart_card"
                android:padding="12dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₿ BITCOIN"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹45,234.50"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last 24h: +2.34%"
                    android:textSize="9sp"
                    android:textColor="#666666"
                    android:layout_marginTop="1dp" />

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart_bitcoin"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="8dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Momentum :"
                        android:textSize="9sp"
                        android:textColor="#666666" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 86%"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:textColor="#10B981" />
                </LinearLayout>
            </LinearLayout>

            <!-- Ethereum Chart -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_chart_card"
                android:padding="12dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ξ ETHEREUM"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹2,890.20"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last 24h: -1.23%"
                    android:textSize="9sp"
                    android:textColor="#666666"
                    android:layout_marginTop="1dp" />

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart_ethereum"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="8dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Momentum :"
                        android:textSize="9sp"
                        android:textColor="#666666" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 52%"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:textColor="#EF4444" />
                </LinearLayout>
            </LinearLayout>

            <!-- Solana Chart -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_chart_card"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="◎SOLANA"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹98.45"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last 24h: +0.89%"
                    android:textSize="9sp"
                    android:textColor="#666666"
                    android:layout_marginTop="1dp" />

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart_solana"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="8dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Momentum :"
                        android:textSize="9sp"
                        android:textColor="#666666" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 90%"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:textColor="#10B981" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Bet Info -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your bet is on ETHEREUM"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#6366F1"
            android:layout_gravity="center"
            android:layout_marginTop="16dp" />

        <!-- Bet Amount Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bet Amount :"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <!-- Bet Amount Options -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/btn_bet_5"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:text="$5"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#6366F1"
                        android:gravity="center"
                        android:background="@drawable/bg_bet_amount_selected"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/btn_bet_10"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:text="$10"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#666666"
                        android:gravity="center"
                        android:background="@drawable/bg_bet_amount"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/btn_bet_50"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:text="$50"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#666666"
                        android:gravity="center"
                        android:background="@drawable/bg_bet_amount"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/btn_bet_100"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:text="$100"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#666666"
                        android:gravity="center"
                        android:background="@drawable/bg_bet_amount"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/btn_bet_200"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:text="$200"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#666666"
                        android:gravity="center"
                        android:background="@drawable/bg_bet_amount"
                        android:layout_marginEnd="8dp" />

                    <ImageView
                        android:id="@+id/btn_custom_amount"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_edit"
                        android:background="@drawable/bg_custom_amount"
                        android:padding="8dp"
                        app:tint="#FFFFFF"
                        android:contentDescription="Custom Amount" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Potential Win: ₹25.00 (5.0x)"
                    android:textSize="12sp"
                    android:textColor="#10B981"
                    android:layout_marginTop="12dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Select Coin Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Coin :"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="12dp" />

        <!-- Coin Selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center"
            android:weightSum="3">

            <!-- Bitcoin -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_bitcoin"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:backgroundTint="#6366F1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/btc_coin_ic"
                        android:contentDescription="Bitcoin" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bitcoin"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BTC"
                        android:textSize="11sp"
                        android:textColor="#E0D4FF"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Ethereum -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_ethereum"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/eth_coin_ic"
                        android:contentDescription="Ethereum" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ethereum"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginTop="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ETH"
                        android:textSize="11sp"
                        android:textColor="#666666"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Solana -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_solana"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/sol_coin_ic"
                        android:contentDescription="Solana" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Solana"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginTop="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SOL"
                        android:textSize="11sp"
                        android:textColor="#666666"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Confirm Bet Button -->
        <TextView
            android:id="@+id/btn_confirm_bet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:paddingVertical="8dp"
            android:text="Confirm Bet"
            android:textSize="20sp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/purple_corners_shape"
            android:backgroundTint="@color/blue_new"
            android:gravity="center"
            android:elevation="4dp" />
    </LinearLayout>
</ScrollView>