<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/home_gradient_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_8dp">

        <!-- Login Title -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/inner_shadow_grey_bg"
            android:backgroundTint="#7CFFFFFF"
            android:gravity="center"
            android:paddingHorizontal="38dp"
            android:paddingVertical="4dp">

            <TextView
                android:id="@+id/loginTitleBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inria_serif_bold"
                android:gravity="center"
                android:paddingVertical="@dimen/_5dp"
                android:text="Log In Access"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/light_font"
                android:shadowColor="@color/text_shadow"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />/>
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15dp"
            android:layout_marginTop="@dimen/_40dp"
            android:fontFamily="@font/inria_serif_bold"
            android:text="Mobile Number :"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/mobileNumLy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4dp"
            android:background="@drawable/grey_rectangle"
            android:backgroundTint="#54FFFFFF"
            android:gravity="center"
            android:paddingVertical="@dimen/_12dp"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_10dp">

            <TextView
                android:id="@+id/phoneIc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/inria_serif_bold"
                android:text="+91"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_8dp"
                android:hint="Enter 10-digits of mobile number "
                android:inputType="phone"
                android:maxLength="10"
                android:textSize="@dimen/_16sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/sendOtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/_20dp"
            android:background="@drawable/blue_gradient"
            android:elevation="2dp"
            android:fontFamily="@font/inria_serif_bold"
            android:gravity="center"
            android:paddingVertical="@dimen/_8dp"
            android:text="Send OTP"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/otpLy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20dp"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_8dp"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15dp"
                android:fontFamily="@font/inria_serif_bold"
                android:text="Enter OTP"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4dp"
                android:gravity="center"
                android:orientation="horizontal">

                <!--                <TextView-->
                <!--                    android:id="@+id/otpBtn"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="match_parent"-->
                <!--                    android:background="@drawable/purple_corners_shape"-->
                <!--                    android:backgroundTint="@color/light_grey"-->
                <!--                    android:fontFamily="@font/inria_serif_bold"-->
                <!--                    android:gravity="center"-->
                <!--                    android:paddingHorizontal="@dimen/_15dp"-->
                <!--                    android:text="OTP"-->
                <!--                    android:textColor="@color/black"-->
                <!--                    android:textSize="16sp"-->
                <!--                    android:textStyle="bold" />-->

                <com.chaos.view.PinView
                    android:id="@+id/etOtp"
                    style="@style/PinWidget.PinView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:cursorVisible="true"
                    android:elevation="@dimen/_8dp"
                    android:hint="------"
                    android:inputType="number"
                    android:itemBackground="#8CD9D9D9"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    app:cursorColor="#8CD9D9D9"
                    app:cursorWidth="2dp"
                    app:hideLineWhenFilled="false"
                    app:itemCount="6"
                    app:itemHeight="32dp"
                    app:itemRadius="8dp"
                    app:itemSpacing="25dp"
                    app:itemWidth="32dp"
                    app:lineColor="#8CD9D9D9"
                    app:lineWidth="0dp"
                    app:viewType="rectangle" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/resendBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:background="@drawable/blue_gradient"
            android:fontFamily="@font/inria_serif_bold"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_25dp"
            android:layout_marginStart="@dimen/_25dp"
            android:paddingVertical="@dimen/_8dp"
            android:text="Resend OTP"
            android:textColor="@color/grey_txt_color"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15dp"
            android:layout_marginTop="@dimen/_20dp"
            android:fontFamily="@font/inria_serif_bold"
            android:text="Referral Code (Optional)"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/referNumLy"
            android:layout_width="match_parent"
            android:paddingVertical="@dimen/_12dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4dp"
            android:background="@drawable/grey_rectangle"
            android:backgroundTint="#8CD9D9D9"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_10dp">

            <ImageView
                android:id="@+id/refNumIc"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_4dp"
                android:contentDescription="@null"
                android:src="@drawable/refer_ic" />

            <EditText
                android:id="@+id/etRefer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_8dp"
                android:background="@null"
                android:hint="Enter referral code"
                android:inputType="phone"
                android:maxLength="10"
                android:textSize="@dimen/_16sp" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15dp"
            android:fontFamily="@font/inria_serif_bold"
            android:text="Get exclusive rewards with a referral code"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <!--            <LinearLayout-->
        <!--                android:id="@+id/submitReferral"-->
        <!--                android:layout_width="60dp"-->
        <!--                android:layout_height="60dp"-->
        <!--                android:layout_alignParentEnd="true"-->
        <!--                android:layout_centerVertical="true"-->
        <!--                android:layout_marginStart="-30dp"-->
        <!--                android:background="@drawable/bg_circle"-->
        <!--                android:gravity="center">-->

        <!--                <ImageView-->
        <!--                    android:layout_width="36dp"-->
        <!--                    android:layout_height="36dp"-->
        <!--                    android:layout_gravity="center"-->
        <!--                    android:contentDescription="@null"-->
        <!--                    android:src="@drawable/check_circle" />-->
        <!--            </LinearLayout>-->

        <TextView
            android:id="@+id/confirmBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_25dp"
            android:background="@drawable/violet_linear_gradient"
            android:elevation="1dp"
            android:fontFamily="@font/inria_serif_bold"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_15dp"
            android:paddingVertical="@dimen/_10dp"
            android:text="Complete Login"
            android:textColor="@color/grey_txt_color"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:visibility="visible" />
    </LinearLayout>

</RelativeLayout>
