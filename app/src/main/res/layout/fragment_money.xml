<!--        </FrameLayout>-->

    </RelativeLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/swipeRefreshLy">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/gameHistory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/tint_round_shape"
                    android:elevation="@dimen/_4dp"
                    android:paddingStart="16dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/inria_serif_bold"
                        android:text="Trade History"
                        android:textColor="@color/actualBlack"
                        android:textSize="16sp" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/transaction"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/grey_circle_image"
                    android:elevation="@dimen/_4dp"
                    android:paddingStart="16dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/inria_serif_bold"
                        android:text="Transactions"
                        android:textColor="@color/actualBlack"
                        android:textSize="16sp" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gameHistoryLy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_15dp"
                    android:background="@drawable/linear_gradient"
                    android:backgroundTint="@color/actualWhite"
                    android:elevation="8dp"
                    android:orientation="vertical"
                    android:paddingBottom="2dp">

                    <LinearLayout
                        android:paddingVertical="@dimen/_15dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/linear_gradient"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/_10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/filter_ic"
                            android:fontFamily="@font/inria_serif_bold"
                            android:gravity="center_vertical"
                            android:paddingVertical="@dimen/_10dp"
                            android:textAllCaps="true"
                            android:textColor="@color/actualBlack"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/allBetsTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/tint_round_shape"
                            android:backgroundTint="@color/actualWhite"
                            android:elevation="@dimen/_4dp"
                            android:fontFamily="@font/inria_serif_bold"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="@dimen/_8dp"
                            android:paddingVertical="@dimen/_4dp"
                            android:text="All bets"
                            android:layout_marginStart="@dimen/_5dp"
                            android:textColor="@color/actualBlack"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/winsTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4dp"
                            android:background="@drawable/tint_round_shape"
                            android:backgroundTint="@color/actualWhite"
                            android:elevation="@dimen/_4dp"
                            android:fontFamily="@font/inria_serif_bold"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="@dimen/_8dp"
                            android:paddingVertical="@dimen/_4dp"
                            android:text="Wins"
                            android:textColor="@color/actualBlack"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/lossesTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4dp"
                            android:background="@drawable/tint_round_shape"
                            android:backgroundTint="@color/actualWhite"
                            android:elevation="@dimen/_4dp"
                            android:fontFamily="@font/inria_serif_bold"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="@dimen/_8dp"
                            android:paddingVertical="@dimen/_4dp"
                            android:text="Losses"
                            android:textColor="@color/actualBlack"
                            android:textSize="10sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/filterDateTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/purple_corners_shape"
                                android:backgroundTint="@color/actualWhite"
                                android:elevation="@dimen/_4dp"
                                android:fontFamily="@font/inria_serif_bold"
                                android:gravity="center_vertical"
                                android:paddingHorizontal="@dimen/_8dp"
                                android:paddingVertical="@dimen/_4dp"
                                android:text="Select"
                                android:drawableStart="@drawable/calendar_ic"
                                android:drawableTint="@color/actualBlack"
                                android:layout_alignParentEnd="true"
                                android:drawablePadding="@dimen/_8dp"
                                android:textAllCaps="true"
                                android:layout_marginStart="@dimen/_5dp"
                                android:textColor="@color/actualBlack"
                                android:textSize="10sp" />

                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_15dp"
                    android:background="@drawable/linear_gradient"
                    android:backgroundTint="@color/actualWhite"
                    android:elevation="8dp"
                    android:orientation="vertical"
                    android:paddingBottom="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/linear_gradient"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/_4dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="1dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/inria_serif_bold"
                            android:gravity="center"
                            android:paddingVertical="@dimen/_10dp"
                            android:text="Trade ID"
                            android:textColor="@color/actualBlack"
                            android:textSize="@dimen/_12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="1dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/inria_serif_bold"
                            android:gravity="center"
                            android:paddingVertical="@dimen/_10dp"
                            android:text="Bet"
                            android:textColor="@color/actualBlack"
                            android:textSize="@dimen/_12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="1dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/inria_serif_bold"
                            android:gravity="center"
                            android:paddingVertical="@dimen/_10dp"
                            android:text="Win"
                            android:textColor="@color/actualBlack"
                            android:textSize="@dimen/_12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="1dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/inria_serif_bold"
                            android:gravity="center"
                            android:paddingVertical="@dimen/_10dp"
                            android:text="Result"
                            android:textColor="@color/actualBlack"
                            android:textSize="@dimen/_12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="1dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/inria_serif_bold"
                            android:gravity="center"
                            android:paddingVertical="@dimen/_10dp"
                            android:text="Selected"
                            android:textColor="@color/actualBlack"
                            android:textSize="@dimen/_12sp" />

                    </LinearLayout>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/gameHistoryList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/_8dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/purple_corners_shape"
                    android:backgroundTint="@color/light_grey_tp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/transactionsLy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_15dp"
                    android:background="@drawable/linear_gradient"
                    android:backgroundTint="@color/actualWhite"
                    android:elevation="8dp"
                    android:orientation="vertical"
                    android:paddingBottom="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/linear_gradient"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="1dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/inria_serif_bold"
                            android:gravity="center"
                            android:paddingVertical="@dimen/_10dp"
                            android:text="Time"
                            android:textColor="@color/actualBlack"
                            android:textSize="@dimen/_12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="1dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/inria_serif_bold"
                            android:gravity="center"
                            android:paddingVertical="@dimen/_10dp"
                            android:text="Status"
                            android:textColor="@color/actualBlack"
                            android:textSize="@dimen/_12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="1dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/inria_serif_bold"
                            android:gravity="center"
                            android:paddingVertical="@dimen/_10dp"
                            android:text="Type"
                            android:textColor="@color/actualBlack"
                            android:textSize="@dimen/_12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="1dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/inria_serif_bold"
                            android:gravity="center"
                            android:paddingVertical="@dimen/_10dp"
                            android:text="Amount"
                            android:textColor="@color/actualBlack"
                            android:textSize="@dimen/_12sp" />

                    </LinearLayout>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/transactionsList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/_8dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/purple_corners_shape"
                    android:backgroundTint="@color/light_grey_tp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</LinearLayout>