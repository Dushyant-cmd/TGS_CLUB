<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purple_corners_shape"
    android:backgroundTint="@color/actualWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/inria_serif_bold"
            android:text="TGS club"
            android:textColor="@color/actualBlack"
            android:textSize="24sp" />

        <LinearLayout
            android:id="@+id/resultImgCont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_4dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_number_green"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_45dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selected Green"
                android:id="@+id/resultImgTv"
                android:textColor="@color/actualBlack"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/resultNumCont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_4dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_45dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tvResultNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selected : 9"
                android:textColor="#000000"
                android:fontFamily="@font/inria_serif_bold"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inria_serif_bold"
            android:text="Balance : "
            android:textColor="@color/actualBlack"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/betAmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/inria_serif_bold"
            android:text="$ 10"
            android:textColor="@color/actualBlack"
            android:textSize="20sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <FrameLayout
            android:id="@+id/ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/violet_top_to_bottom_gradient">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:fontFamily="@font/inria_serif_bold"
                android:text="10"
                android:textColor="@color/actualBlack"
                android:textSize="16sp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/hundred"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/grey_rectangle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="100"
                android:fontFamily="@font/inria_serif_bold"
                android:textColor="@color/actualBlack"
                android:textSize="16sp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/thousand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/grey_rectangle">

            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/inria_serif_bold"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="1000"
                android:textColor="@color/actualBlack"
                android:textSize="16sp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/tenThousand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/grey_rectangle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inria_serif_bold"
                android:padding="10dp"
                android:text="10000"
                android:textColor="@color/actualBlack"
                android:textSize="16sp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/oneLac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/grey_rectangle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:fontFamily="@font/inria_serif_bold"
                android:text="100000"
                android:textColor="@color/actualBlack"
                android:textSize="16sp" />

        </FrameLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/inria_serif_bold"
        android:text="Quantity: "
        android:textColor="@color/actualBlack"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/increment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:background="@drawable/violet_gradient_circle"
            android:padding="@dimen/_15dp"
            android:text="+"
            android:textColor="@color/actualBlack"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/betInto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8dp"
            android:background="@drawable/grey_rectangle"
            android:elevation="@dimen/_4dp"
            android:fontFamily="@font/inria_serif_bold"
            android:paddingHorizontal="@dimen/_15dp"
            android:paddingVertical="@dimen/_4dp"
            android:text="x 1"
            android:textColor="@color/actualBlack"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/decrement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8dp"
            android:background="@drawable/violet_gradient_circle"
            android:padding="@dimen/_15dp"
            android:text=" - "
            android:textColor="@color/actualBlack"
            android:textSize="22sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="2dp">

        <TextView
            android:id="@+id/oneXTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8dp"
            android:background="@drawable/grey_rectangle"
            android:fontFamily="@font/inria_serif_bold"
            android:paddingHorizontal="@dimen/_30dp"
            android:paddingVertical="2dp"
            android:text="x 1"
            android:textColor="@color/actualBlack"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/fiveXTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8dp"
            android:background="@drawable/grey_rectangle"
            android:fontFamily="@font/inria_serif_bold"
            android:paddingHorizontal="@dimen/_30dp"
            android:paddingVertical="2dp"
            android:text="x 5"
            android:textColor="@color/actualBlack"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tenXTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8dp"
            android:background="@drawable/grey_rectangle"
            android:fontFamily="@font/inria_serif_bold"
            android:paddingHorizontal="@dimen/_30dp"
            android:paddingVertical="2dp"
            android:text="x 10"
            android:textColor="@color/actualBlack"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="4dp">

        <TextView
            android:id="@+id/twentyXTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8dp"
            android:background="@drawable/grey_rectangle"
            android:fontFamily="@font/inria_serif_bold"
            android:paddingHorizontal="@dimen/_30dp"
            android:paddingVertical="2dp"
            android:text="x 20"
            android:textColor="@color/actualBlack"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/fiftyXTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8dp"
            android:background="@drawable/grey_rectangle"
            android:fontFamily="@font/inria_serif_bold"
            android:paddingHorizontal="@dimen/_30dp"
            android:paddingVertical="2dp"
            android:text="x 50"
            android:textColor="@color/actualBlack"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/hundredXTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8dp"
            android:background="@drawable/grey_rectangle"
            android:fontFamily="@font/inria_serif_bold"
            android:paddingHorizontal="@dimen/_30dp"
            android:paddingVertical="2dp"
            android:text="x 100"
            android:textColor="@color/actualBlack"
            android:textSize="22sp" />
    </LinearLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:layout_marginTop="@dimen/_4dp"
        android:buttonTint="#602DB6"
        android:checked="true"
        android:textColor="@color/actualBlack"
        android:fontFamily="@font/inria_serif_bold"
        android:text="@string/i_agree_to_the_terms_conditions"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/purple_corners_shape"
            android:backgroundTint="@color/actual_light_grey"
            android:fontFamily="@font/inria_serif_bold"
            android:paddingHorizontal="@dimen/_15dp"
            android:paddingVertical="@dimen/_10dp"
            android:text="Cancel"
            android:textColor="@color/actualBlack"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/confirmBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/purple_corners_shape"
            android:backgroundTint="@color/light_tint"
            android:fontFamily="@font/inria_serif_bold"
            android:paddingHorizontal="@dimen/_15dp"
            android:paddingVertical="@dimen/_10dp"
            android:text="Confirm Bet"
            android:textColor="@color/actualBlack"
            android:textSize="24sp" />

    </LinearLayout>
</LinearLayout>