<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_tint"
    tools:context=".activities.Splash">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/homes"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/wzLogoLy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="32dp">

            <!-- Model Image (top) -->
            <ImageView
                android:id="@+id/modelImage"
                android:layout_width="wrap_content"
                android:layout_height="320dp"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/model_image_desc"
                android:scaleType="fitCenter"
                android:src="@drawable/splash_root_bg" />

            <!-- WZ Logo -->
            <ImageView
                android:id="@+id/wzLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/modelImage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-120dp"
                android:contentDescription="@string/logo_image_desc"
                android:src="@drawable/splash_child_bg" />
        </RelativeLayout>

        <!-- Tagline -->
        <TextView
            android:id="@+id/tagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wzLogoLy"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:textStyle="bold"
            android:text="@string/tagline"
            android:textColor="#FFF"
            android:textSize="13dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_15dp"
            android:layout_height="match_parent"
            android:layout_below="@id/tagline"
            android:gravity="center"
            android:orientation="vertical">

            <ProgressBar
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:indeterminateTint="@color/purple_700" />

            <!-- Tagline -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/wzLogoLy"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:lineSpacingExtra="2dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:text="LOADING..........."
                android:textColor="#FFF"
                android:textSize="13sp" />


            <!-- WZ Logo -->
            <ImageView
                android:layout_marginTop="@dimen/_35dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/logo_image_desc"
                android:src="@drawable/tsc_logo" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
