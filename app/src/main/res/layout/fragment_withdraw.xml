<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-6dp"
            android:background="@drawable/bottom_round_linear_gradient"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_15dp"
            android:paddingVertical="@dimen/_25dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/upBtn"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null"
                    android:src="@drawable/baseline_arrow_back_24" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_15dp"
                android:fontFamily="@font/inria_serif_bold"
                android:text="Withdraw Funds"
                android:textColor="@color/actualBlack"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_8dp"
            android:paddingHorizontal="@dimen/_15dp"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8dp"
                android:fontFamily="@font/inria_serif_bold"
                android:text="Account Number : "
                android:textColor="@color/actualBlack"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/accNumBank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4dp"
                android:background="@drawable/grey_rectangle"
                android:fontFamily="@font/inria_serif_bold"
                android:hint="Enter Account Number"
                android:inputType="number"
                android:paddingVertical="@dimen/_15dp"
                android:paddingStart="@dimen/_8dp"
                android:paddingEnd="@dimen/_4dp"
                android:textColor="@color/actualBlack"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/inria_serif_bold"
                android:text="Bank holder Name : "
                android:textColor="@color/actualBlack"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/nameHolderBank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4dp"
                android:background="@drawable/grey_rectangle"
                android:fontFamily="@font/inria_serif_bold"
                android:hint="Enter Your Name"
                android:inputType="textPersonName"
                android:paddingVertical="@dimen/_15dp"
                android:paddingStart="@dimen/_8dp"
                android:textColor="@color/actualBlack"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/inria_serif_bold"
                android:text="Bank Name : "
                android:textColor="@color/actualBlack"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/nameBank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4dp"
                android:background="@drawable/grey_rectangle"
                android:fontFamily="@font/inria_serif_bold"
                android:hint="Enter Bank name"
                android:inputType="textPersonName"
                android:paddingVertical="@dimen/_15dp"
                android:paddingStart="@dimen/_8dp"
                android:textColor="@color/actualBlack"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/inria_serif_bold"
                android:text="IFSC Code : "
                android:textColor="@color/actualBlack"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/ifscBank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4dp"
                android:background="@drawable/grey_rectangle"
                android:fontFamily="@font/inria_serif_bold"
                android:hint="Enter IFSC Code"
                android:inputType="text"
                android:paddingVertical="@dimen/_15dp"
                android:paddingStart="@dimen/_8dp"
                android:textColor="@color/actualBlack"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:buttonTint="#602DB6"
                android:checked="true"
                android:fontFamily="@font/inria_serif_bold"
                android:paddingStart="4dp"
                android:text="@string/i_understand_that_my_bank_details_are_encrypted_and_stored_securely_i_authorize_color_trading_to_process_transactions_from_this_account"
                android:textSize="@dimen/_12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_15dp"
            android:paddingVertical="8dp"
            android:paddingBottom="@dimen/_15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8dp"
                    android:fontFamily="@font/inria_serif_bold"
                    android:text="Withdrawal Amount : "
                    android:textColor="@color/actualBlack"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/withdrawAmt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4dp"
                    android:background="@drawable/grey_rectangle"
                    android:fontFamily="@font/inria_serif_bold"
                    android:hint="Enter Amount"
                    android:inputType="number"
                    android:paddingVertical="@dimen/_15dp"
                    android:paddingStart="@dimen/_8dp"
                    android:paddingEnd="@dimen/_4dp"
                    android:textColor="@color/actualBlack"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8dp"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/inria_serif_bold"
                    android:text="Min: ₹200 | Max: ₹200000"
                    android:textColor="@color/actualBlack"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/inria_serif_bold"
                    android:text="Withdrawal Tax for ₹200 to ₹1500 : ₹30\nwithdrawal Tax for ₹1500 to ₹2 lakhs  : TDS% \n\nT&amp;C : Your Wallet Must Be Activated\nDay - MON to FRI    Timing - 10 Am to 5 Pm"
                    android:textColor="@color/actualBlack"
                    android:textSize="@dimen/_12sp" />

                <TextView
                    android:id="@+id/submitWithdraw"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/dark_tint_gradient_linear"
                    android:drawableEnd="@drawable/ic_arrow_24"
                    android:elevation="4dp"
                    android:fontFamily="@font/inria_serif_bold"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_15dp"
                    android:paddingVertical="@dimen/_12dp"
                    android:text="Confirm Withdrawal"
                    android:textColor="@color/actualBlack"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>