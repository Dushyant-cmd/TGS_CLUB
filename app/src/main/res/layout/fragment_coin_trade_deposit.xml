<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Main Content -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="@dimen/_8dp">

                <!-- Enter Amount Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/istok_web_regular"
                    android:text="Enter Amount :"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/light_silver_bg"
                    android:fontFamily="@font/istok_web_regular"
                    android:hint="$0.00"
                    android:inputType="numberDecimal"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="8dp"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <!-- Tutorial Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/silver_bg_sk"
                    android:backgroundTint="@color/light_brown"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/baseline_info_24"
                        android:backgroundTint="@color/black" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/istok_web_bold"
                        android:text="How to recharge : Video tutorial available here !"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Quick Select Amount -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/istok_web_regular"
                    android:text="Quick Select Amount"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="@dimen/_4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_bet_50"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/little_dark_violet_rect"
                        android:fontFamily="@font/istok_web_regular"
                        android:gravity="center"
                        android:text="$50"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/btn_bet_100"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/white_border_rectangle"
                        android:fontFamily="@font/istok_web_regular"
                        android:gravity="center"
                        android:text="$100"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/btn_bet_500"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/white_border_rectangle"
                        android:fontFamily="@font/istok_web_regular"
                        android:gravity="center"
                        android:text="$500"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/btn_bet_1000"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/white_border_rectangle"
                        android:fontFamily="@font/istok_web_regular"
                        android:gravity="center"
                        android:text="$1000"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- QR Code Placeholder -->
                <FrameLayout
                    android:layout_width="250dp"
                    android:layout_height="220dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_8dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/silver_bg_sk">

                    <ImageView
                        android:id="@+id/ivQrCode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="QR Code"
                        android:scaleType="fitCenter" />

                </FrameLayout>

                <!-- Email 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:background="@drawable/silver_bg_sk"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/upiRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:itemCount="2"
                        tools:listitem="@layout/upi_adapter_item" />

                </LinearLayout>

                <!-- Transaction ID -->
                <RelativeLayout
                    android:id="@+id/tvWalletAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/silver_bg_sk"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/istok_web_regular"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        tools:text="zupeeMall@UPI" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@null"
                        android:scaleType="centerInside"
                        android:src="@drawable/copy_tgs_ic" />
                </RelativeLayout>

                <!-- Wallet Address -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/istok_web_regular"
                    android:text="Enter wallet address :"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etWalletAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4dp"
                    android:background="@drawable/light_silver_bg"
                    android:fontFamily="@font/istok_web_regular"
                    android:hint="Enter your wallet address"
                    android:inputType="text"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="16dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/dark_grey" />

                <!-- UTR Code -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8dp"
                    android:layout_marginTop="@dimen/_8dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/istok_web_regular"
                    android:text="Enter UTR :"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etUtr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/light_silver_bg"
                    android:fontFamily="@font/istok_web_regular"
                    android:hint="Enter UTR Code"
                    android:inputType="text"
                    android:padding="16dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/dark_grey" />

                <!-- Add Recharge Button -->
                <TextView
                    android:id="@+id/btnAddRecharge"
                    android:layout_width="260dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:background="@drawable/wingo_gradient"
                    android:fontFamily="@font/istok_web_regular"
                    android:gravity="center"
                    android:text="Add Recharge"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>