<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer shadow (blurred, subtle) -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
    <!-- Drop shadow below button (simulates outer shadow) -->
    <item android:left="0dp" android:top="4dp" android:right="0dp" android:bottom="0dp">
        <shape>
            <solid android:color="#338ED0D5"/> <!-- #338ED0D5 is semi-transparent for outer shadow -->
            <corners android:radius="20dp"/>
        </shape>
    </item>
    <!-- Main button color -->
    <item android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="6dp">
        <shape>
            <solid android:color="#08CFD2"/>
            <corners android:radius="20dp"/>
            <!-- Simulate inner shadow (thin border inside) -->
            <stroke android:width="2dp" android:color="#D9D9D9" />
        </shape>
    </item>
</layer-list>