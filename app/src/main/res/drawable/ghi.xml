<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#22000000"/> <!-- Subtle black shadow -->
            <corners android:radius="18dp"/>
        </shape>
    </item>
    <!-- Border Layer -->
    <item android:top="3dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="1dp" android:color="#000000"/>
            <corners android:radius="15dp"/>
        </shape>
    </item>
    <!-- Gradient Layer (with rounded corners) -->
    <item android:top="3dp" android:left="1dp" android:right="1dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="315"
                android:startColor="#7FFFD4"
                android:centerColor="#08CFD2"
                android:endColor="#1DD4C3"
                android:centerX="0.89"/>
            <corners android:radius="15dp"/>
        </shape>
    </item>
</layer-list>
