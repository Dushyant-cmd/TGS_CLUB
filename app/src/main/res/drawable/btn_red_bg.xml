<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer shadow layer -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <!-- Semi-transparent dark red shadow -->
            <solid android:color="#44B71E20" />
            <corners android:radius="15dp" />
        </shape>
    </item>

    <!-- Inner shadow simulation layer -->
    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#22000000" /> <!-- subtle black translucent -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Main button gradient layer -->
    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:endColor="#FF484B"
                android:startColor="#B71E20"
                android:type="linear" />  <!-- lighter red -->
            <corners android:radius="12dp" />
        </shape>
    </item>

</layer-list>
